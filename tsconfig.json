{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "noEmit": false,
    "noEmitHelpers": false,
    "importHelpers": true,
    "strictNullChecks": false,
    "allowUnreachableCode": true,
    "newLine": "LF",
    "lib": [
      "es2017"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "outDir": "./build",
    "rootDir": "./src"
  },
  "include": [
    "./src"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}